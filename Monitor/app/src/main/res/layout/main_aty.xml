<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--上面的actionbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/blue_level0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_iv_logo"
            android:layout_width="@dimen/actionbar_icon_height"
            android:layout_height="@dimen/actionbar_icon_height"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_web_site" />

        <TextView
            android:id="@+id/id_ab_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="基坑巡视"
            android:textColor="@color/white"
            android:textSize="@dimen/actionbar_textsize_normal" />

        <ImageView
            android:id="@+id/id_iv_setting"
            android:layout_width="@dimen/actionbar_icon_width"
            android:layout_height="@dimen/actionbar_icon_height"
            android:layout_gravity="center_vertical"
            android:background="@drawable/click_selector"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_overflow" />
    </LinearLayout>

    <!--下面的列表部分-->
    <ListView
        android:id="@+id/id_lv_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_tv_new_project"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button_click"
            android:gravity="center"
            android:text="添加工程"
            android:textColor="@color/white"
            android:textSize="21sp" />
    </LinearLayout>
</LinearLayout>
